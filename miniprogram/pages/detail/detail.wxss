swiper,
swiper-item {
  width: 100%;
  height: 500rpx;
}

.back {
  position: fixed;
  top: 90rpx;
  left: 30rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 999;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  background-image: url('data:image/svg+xml;base64,');
}

.swiper-image {
  width: 100%;
  height: 100%;
}


.content {
  width: 100%;
  height: calc(100vh - 500rpx);
  box-sizing: border-box;
  padding: 40rpx;
  background-color: rgba(252, 230, 197);
}

.top {
  margin-top: 10rpx;
  height: 80rpx;
  display: flex;
  position: relative;
  align-items: baseline;
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  margin-right: 20rpx;
}

.date {
  font-size: 24rpx;
  color: #bbb;
}

.place {
  font-size: 30rpx;
  font-weight: 400;
  margin-right: 20rpx;
}
.desc_text {
  font-size: 30rpx;
  font-weight: 400;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.desc {
  margin-top: 20rpx;
  padding: 10rpx;
  /* width: 90%; */
  /* background-color: #fdb92c; */
  height: calc(100vh - 500rpx - 700rpx);
  border: #fdb92c solid 5px;
  border-radius: 20rpx;
}

.concat {
  background-color: #FFA500;
  box-sizing: border-box;
  padding: 40rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-wrap: wrap;
}

.c-item {
  font-size: 28rpx;
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.c-item view {
  width: 100%;
}

.c-item button.c-btn {
  padding: 0;
  font-size: 24rpx;
  height: 55rpx;
  width: 200rpx;
  line-height: 55rpx;
  text-align: center;
  font-weight: 600;
  border-radius: 6rpx;
  background-color: #fdb92c;

}

.c-item button.c-btn::after {
  border: none;
}

.message {
  position: absolute;
  right: 20rpx;
  top: 0rpx;
  width: 80rpx;
  height: 80rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  background-image: url('data:image/svg+xml;base64,');
}

.message::after {
  position: absolute;
  /* content: '站内信'; */
  color: #000;
  font-size: 24rpx;
  bottom: -30rpx;
  text-align: center;
}